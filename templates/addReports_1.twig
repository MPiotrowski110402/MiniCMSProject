{% extends 'layout.twig' %}

{% block content %}
<h1>{{ title }}</h1>

<!-- Formularz edycji raportu -->
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Dodaj Raport</h3>
        <form action="" method="post">
            <div class="mb-3">
                <label for="task" class="form-label">Zadanie</label>
                <select class="form-control" id="task" name="task_id">
                        <option value="no_value">&nbsp;</option>
                    {% for task in tasksList %}
                        <option value="{{ task.id }}">{{task.id}}: {{ task.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Tytu≈Ç</label>
                <input type="text" class="form-control" id="title" name="title" value="">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Opis</label>
                <textarea class="form-control" id="description" name="description"></textarea>
            </div>
            <button type="submit" name="report_add_btn" class="btn btn-primary">Zapisz zmiany</button>
        </form>
    </div>
</div>

{% endblock %}
