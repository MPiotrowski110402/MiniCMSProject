{% extends 'layout.twig' %}

{% block content %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Szczegóły zadania: {{ task.title }}</h2>
        </div>
        <div class="card-body">
            <p><strong>Opis:</strong> {{ task.description }}</p>
            <p><strong>Termin:</strong> {{ task.due_date }}</p>
            <p><strong>Status:</strong> 
                {% if task.status == 'in_progress' %}
                    <span class="badge bg-warning">W trakcie</span>
                {% elseif task.status == 'completed' %}
                    <span class="badge bg-success">Zakończone</span>
                {% else %}
                    <span class="badge bg-secondary">Oczekujące</span>
                {% endif %}
            </p>
            <p><strong>Utworzono:</strong> {{ task.created_at }}</p>
            <p><strong>Klient:</strong> {{ task.first_name }} {{task.last_name}}</p>
            <p><strong>mail:</strong> {{ task.contact }}</p>
            <p><strong>telefon:</strong>{{task.phone}} </p>
            
            <div class="mt-3">
                <a href="index.php?page=task_edit&id={{ task.id }}" class="btn btn-primary">Edytuj</a>
                <a href="index.php?page=task&id={{ task.id }}&delete_task=true" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć to zadanie?')">Usuń</a>
                <a href="index.php?page=tasks" class="btn btn-secondary">Powrót</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
